<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigation"
        app:startDestination="@id/chat">

    <fragment
            android:id="@+id/products"
            android:label="fragment_products"
            android:name="com.alfadev.bizlinker.ProductsFragment">
        <action
                android:id="@+id/action_products_self"
                app:destination="@id/products" />
        <action
                android:id="@+id/action_products_to_profile"
                app:destination="@id/profile" />
        <action
                android:id="@+id/action_products_to_search"
                app:destination="@id/search" />
        <action
                android:id="@+id/action_products_to_chat"
                app:destination="@id/chat" />
    </fragment>
    <fragment
            android:id="@+id/chat"
            android:label="fragment_chat"
            android:name="com.alfadev.bizlinker.ChatFragment">
        <action
                android:id="@+id/action_chat_self"
                app:destination="@id/chat" />
        <action
                android:id="@+id/action_chat_to_search"
                app:destination="@id/search" />
        <action
                android:id="@+id/action_chat_to_products"
                app:destination="@id/products" />
        <action
                android:id="@+id/action_chat_to_profile"
                app:destination="@id/profile" />
    </fragment>
    <fragment
            android:id="@+id/search"
            android:label="fragment_search"
            android:name="com.alfadev.bizlinker.SearchFragment">
        <action
                android:id="@+id/action_search_self"
                app:destination="@id/search" />
        <action
                android:id="@+id/action_search_to_chat"
                app:destination="@id/chat" />
        <action
                android:id="@+id/action_search_to_profile"
                app:destination="@id/profile" />
        <action
                android:id="@+id/action_search_to_products"
                app:destination="@id/products" />
    </fragment>
    <fragment
            android:id="@+id/profile"
            android:label="fragment_profile"
            android:name="com.alfadev.bizlinker.ProfileFragment">
        <action
                android:id="@+id/action_profile_self"
                app:destination="@id/profile" />
        <action
                android:id="@+id/action_profile_to_chat"
                app:destination="@id/chat" />
        <action
                android:id="@+id/action_profile_to_search"
                app:destination="@id/search" />
        <action
                android:id="@+id/action_profile_to_products"
                app:destination="@id/products" />
    </fragment>
</navigation>