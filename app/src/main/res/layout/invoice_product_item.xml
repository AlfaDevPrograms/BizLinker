<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/invoiceProductItem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeWidth="3dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:cardElevation="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View
                    android:id="@+id/divider7"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="?attr/colorOnPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/invoiceProductPriceImg"
                    android:alpha="0.5"
                    app:layout_constraintTop_toTopOf="@+id/invoiceProductPriceImg"
                    app:layout_constraintEnd_toEndOf="@+id/divider5"
                    app:layout_constraintStart_toStartOf="@+id/divider5" />

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:id="@+id/cardviewIconInvoiceProduct"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/whiteDark"
                    app:strokeColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageViewInvoiceProduct" />

                <TextView
                        android:text="@string/product_logo_product_item_txt_hint"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/invoiceProductLogoTxt"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textAlignment="center"
                        android:elegantTextHeight="true"
                        android:autoSizeTextType="uniform"
                        android:padding="10dp"
                        android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                    android:text="@string/product_name_product_item_txt_hint"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/invoiceProductNameTxt"
                    app:layout_constraintTop_toTopOf="@+id/cardviewIconInvoiceProduct"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:maxLines="1"
                    app:layout_constraintStart_toEndOf="@+id/cardviewIconInvoiceProduct"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/divider5"
                    android:layout_marginBottom="4dp"
                    android:gravity="bottom|start"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20sp" />

            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cardviewIconInvoiceProduct"
                    android:id="@+id/invoiceProductPriceImg"
                    android:background="@color/empty"
                    android:foreground="@drawable/price"
                    app:layout_constraintTop_toBottomOf="@+id/divider5"
                    android:layout_marginTop="4dp"
                    android:clickable="false"
                    app:layout_constraintStart_toStartOf="@+id/invoiceProductNameTxt" />

            <TextView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/invoiceProductPrice"
                    android:gravity="bottom|start"
                    android:text="@string/sum_hint_txt"
                    android:autoSizeMaxTextSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/invoiceProductPriceImg"
                    app:layout_constraintTop_toTopOf="@+id/invoiceProductPriceImg"
                    android:textSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@+id/invoiceProductPriceImg"
                    android:layout_marginStart="4dp" />

            <View
                    android:id="@+id/divider5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="?attr/colorOnPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/cardviewIconInvoiceProduct"
                    app:layout_constraintTop_toTopOf="@+id/cardviewIconInvoiceProduct"
                    app:layout_constraintStart_toStartOf="@+id/invoiceProductNameTxt"
                    app:layout_constraintEnd_toEndOf="@+id/invoiceProductNameTxt"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.5" />

            <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cardviewIconInvoiceProduct"
                    android:id="@+id/invoiceProductCountImg"
                    android:background="@color/empty"
                    android:foreground="@drawable/count"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/divider5"
                    android:clickable="false"
                    app:layout_constraintEnd_toEndOf="@+id/invoiceProductNameTxt" />

            <TextView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:id="@+id/invoiceProductCount"
                    android:gravity="bottom|end"
                    android:text="@string/product_count_product_item_txt_hint"
                    app:layout_constraintBottom_toBottomOf="@+id/invoiceProductCountImg"
                    app:layout_constraintTop_toTopOf="@+id/invoiceProductCountImg"
                    android:textSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20sp"
                    android:textStyle="normal"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintEnd_toStartOf="@+id/invoiceProductCountImg"
                    android:layout_marginEnd="4dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>