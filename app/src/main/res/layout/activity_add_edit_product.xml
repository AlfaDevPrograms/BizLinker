<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="0dp"
            app:strokeWidth="0.5dp"
            android:layout_marginTop="-8dp"
            android:layout_marginStart="-8dp"
            android:layout_marginEnd="-8dp"
            android:id="@+id/addEditProductHeader"
            tools:ignore="VisualLintBounds">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                tools:ignore="VisualLintBounds">

            <TextView
                    android:text="@string/add_product"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/addEditProductHeaderTxt"
                    app:layout_constraintBottom_toBottomOf="@+id/backToProductsFromAddEditProduct"
                    app:layout_constraintTop_toTopOf="@+id/backToProductsFromAddEditProduct"
                    android:gravity="center|start"
                    app:layout_constraintStart_toEndOf="@+id/backToProductsFromAddEditProduct"
                    android:layout_marginStart="4dp"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" />

            <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/backToProductsFromAddEditProduct"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:foreground="@drawable/back"
                    android:background="@color/empty"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="4dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scrollbarSize="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addEditProductHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:id="@+id/cardviewAddEditProductPhoto"
                    app:cardBackgroundColor="@color/empty"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/addEditProductNameTIL"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    app:layout_constraintBottom_toBottomOf="@+id/addEditProductPriceTIL"
                    android:layout_marginBottom="8dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/red">

                <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/addEditProductExamplePhoto"
                        android:background="@color/empty"
                        android:clickable="false"
                        android:foreground="@drawable/photo_icon"
                        tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/addEditProductPhoto"
                        android:scaleType="centerCrop" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addEditProductNameTIL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/product_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toEndOf="@+id/cardviewAddEditProductPhoto"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cursorColor="@color/red"
                    android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addEditProductNameTIET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/main_font"
                        android:textColor="?attr/colorOnPrimary"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textSelectHandle="@color/red"
                        android:textSelectHandleLeft="@color/red"
                        android:textSelectHandleRight="@color/red"
                        android:textColorHighlight="@color/red"
                        android:textCursorDrawable="@drawable/custom_cursor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addEditProductPriceTIL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/product_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/addEditProductNameTIL"
                    app:layout_constraintStart_toEndOf="@+id/cardviewAddEditProductPhoto"
                    android:layout_marginStart="8dp"
                    app:cursorColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addEditProductPriceTIET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/main_font"
                        android:textColor="?attr/colorOnPrimary"
                        android:imeOptions="actionNext"
                        android:inputType="number|numberDecimal"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:textSelectHandle="@color/red"
                        android:textSelectHandleLeft="@color/red"
                        android:textSelectHandleRight="@color/red"
                        android:textColorHighlight="@color/red"
                        android:textCursorDrawable="@drawable/custom_cursor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addEditProductPhotoTIL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/product_photo"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/addEditProductPriceTIL"
                    app:layout_constraintEnd_toStartOf="@+id/cardviewAddEditProductPickPhoto"
                    android:layout_marginEnd="8dp"
                    app:cursorColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addEditProductPhotoTIET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/main_font"
                        android:textColor="?attr/colorOnPrimary"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:inputType="text"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textSelectHandle="@color/red"
                        android:textSelectHandleLeft="@color/red"
                        android:textSelectHandleRight="@color/red"
                        android:textColorHighlight="@color/red"
                        android:textCursorDrawable="@drawable/custom_cursor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardviewAddEditProductPickPhoto"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toTopOf="@+id/addEditProductPhotoTIL"
                    android:layout_marginTop="4dp"
                    app:cardBackgroundColor="@color/whiteDark"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/red">

                <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/addEditProductPickPhotoImage"
                        android:foreground="@drawable/add_photo"
                        android:background="@color/empty"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:clickable="false"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:foregroundTint="@color/red" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addEditProductCountTIL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/product_count"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addEditProductPhotoTIL"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:cursorColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addEditProductCountTIET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/main_font"
                        android:textColor="?attr/colorOnPrimary"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:textSelectHandle="@color/red"
                        android:textSelectHandleLeft="@color/red"
                        android:textSelectHandleRight="@color/red"
                        android:textColorHighlight="@color/red"
                        android:textCursorDrawable="@drawable/custom_cursor" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addEditProductDescriptionTIL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/product_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/addEditProductCountTIL"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:cursorColor="@color/red"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addEditProductDescriptionTIET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/main_font"
                        android:textColor="?attr/colorOnPrimary"
                        android:imeOptions="actionNext"
                        android:inputType="text|textImeMultiLine|textMultiLine"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textSelectHandle="@color/red"
                        android:textSelectHandleLeft="@color/red"
                        android:textSelectHandleRight="@color/red"
                        android:textColorHighlight="@color/red"
                        android:textCursorDrawable="@drawable/custom_cursor" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardviewAddEditProductSave"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="50dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardBackgroundColor="@color/whiteDark"
            app:strokeColor="@color/whiteDark">

        <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/addEditProductSave"
                android:foreground="@drawable/save"
                android:background="@color/empty"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                android:foregroundTint="@color/red"
                android:clickable="false" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>